<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/bootanimation_window_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bootanimation_spinner_background">

            <Spinner
                android:id="@+id/bootAnimationSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toStartOf="@+id/checkBox"/>

            <ImageButton
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/bootanimation_check"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"
            android:orientation="vertical">

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/progress_bar_loader"
                style="@style/Widget.MaterialProgressBar.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="50dp"
                android:indeterminate="true"/>

            <RelativeLayout
                android:id="@+id/font_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="AaBbCcDd123"
                    android:textColor="@android:color/white"
                    android:textSize="50dp"/>

                <TextView
                    android:id="@+id/text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_normal"
                    android:gravity="center"
                    android:text="AaBbCcDd123"
                    android:textColor="@android:color/white"
                    android:textSize="50dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_normal_italics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_bold"
                    android:gravity="center"
                    android:text="AaBbCcDd123"
                    android:textColor="@android:color/white"
                    android:textSize="50dp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/text_normal_bold_italics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_normal_italics"
                    android:gravity="center"
                    android:text="AaBbCcDd123"
                    android:textColor="@android:color/white"
                    android:textSize="50dp"
                    android:textStyle="italic|bold"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>