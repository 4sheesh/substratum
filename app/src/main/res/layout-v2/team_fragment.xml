<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/team_title_1"
            android:textColor="@color/settings_title_color"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/team_text_1"/>

        <include
            android:id="@+id/nicholas"
            layout="@layout/team_card_nicholas"/>

        <include
            android:id="@+id/syko"
            layout="@layout/team_card_syko"/>

        <include
            android:id="@+id/george"
            layout="@layout/team_card_george"/>

        <include
            android:id="@+id/cory"
            layout="@layout/team_card_cory"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:text="@string/team_title_2"
            android:textColor="@color/settings_title_color"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/team_text_2"/>

        <include
            android:id="@+id/branden"
            layout="@layout/team_card_branden"/>

        <include
            android:id="@+id/dave"
            layout="@layout/team_card_dave"/>

        <include
            android:id="@+id/jimmy"
            layout="@layout/team_card_jimmy"/>
    </LinearLayout>
</ScrollView>